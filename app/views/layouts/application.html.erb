<!DOCTYPE html>
<html>
  <head>
    <title>TodoApp</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'wind', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%=render "layouts/navbar" %>
    <div id="flash-messages">
      <% flash.each do |key, value| %>
        <% byebug %>
        <% if key == 'alert' %>
          <div class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="alert">
            <%= value %>
          </div>
        <% else %>
          <div class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
            <%= value %>
          </div>
        <% end %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
